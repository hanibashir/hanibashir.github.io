import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import Link from "@components/Link.astro";

const CS50Url =
  "https://courses.edx.org/certificates/5cc083930f4a4e51a726e3824d8bced3";
const kotlinCoreUrl =
  "https://hyperskill.org/certificates/f36876d1-af52-4b8b-b2d2-f72cf9211777.pdf";
const ASMUrl =
