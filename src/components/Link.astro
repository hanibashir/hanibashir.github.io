---
// library
import { Icon } from "astro-icon/components"

interface Props {
    text: string;
    href: string;
    style: "primary" | "secondary";
    icon?: {
        name: string;
        side: "right" | "left";
    };
    isFilled?: boolean;
    borderVisible?: boolean;
    classes?: string;
    target?: string;
}

const {
    text,
    href,
    style,
    icon,
    isFilled = true,
    borderVisible = false,
    classes,
    target,
    ...rest
} = Astro.props as Props;

---

<a
    href={href}
    target={target}
    class:list={[
        "link",
        classes,
        style,
        { filled: isFilled, bordered: borderVisible },
    ]}
    
    {...rest}
>
    {
        icon && icon.side === "left" && (
            <Icon name={icon.name} height={24} width={24} />
        )
    }

    <span>{text}</span>

    {
        icon && icon.side === "right" && (
            <Icon name={icon.name} height={24} width={24} />
        )
    }
</a>
